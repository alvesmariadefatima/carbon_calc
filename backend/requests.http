  "resultType": "quick",
  "data": {
    "origin": "São Paulo",
    "destination": "Rio de Janeiro",
    "distance": 430,
    "transportType": "Carro",
    "emissionKg": 51.6,
    "class": "medium"
  },
  "timestamp": "2025-12-10T15:30:00Z"
}

